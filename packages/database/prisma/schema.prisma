// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model DiscordChallenge {
  id            Int      @id @default(autoincrement())
  did           String   @unique
  username      String
  timestamp     DateTime
  challengeCode String   @unique
  userId        String   @unique
}

model User {
  id         Int    @id @default(autoincrement())
  address    String @unique
  discord    String @unique
  did        String @unique
  didSession String
}

model Thread {
  id          Int       @id @default(autoincrement())
  discordId   String    @unique
  discordUser String
  timestamp   String
  content     String
  messages    Message[]
}

model Message {
  id          Int    @id @default(autoincrement())
  discordId   String @unique
  discordUser String
  timestamp   String
  content     String
  Thread      Thread @relation(fields: [threadId], references: [id])
  threadId    Int
}

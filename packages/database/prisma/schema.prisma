// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model DiscordChallenge {
  id            Int      @id @default(autoincrement())
  did           String   @unique
  username      String
  timestamp     DateTime
  challengeCode String   @unique
  userId        String   @unique
}

model User {
  id         String @id @unique @default(cuid())
  discord    String @unique
  did        String @unique
  didSession String @db.Text
}

model Community {
  id        Int    @id @default(autoincrement())
  discordId String @unique
  name      String
}

model Thread {
  id               Int       @id @default(autoincrement())
  discordId        String    @unique
  streamId         String    @unique
  discordAuthor    String
  discordCommunity String
  title            String
  createdAt        DateTime
  messages         Comment[]
}

model Comment {
  id            Int      @id @default(autoincrement())
  discordId     String   @unique
  streamId      String   @unique
  discordAuthor String
  text          String
  createdAt     DateTime
  Thread        Thread   @relation(fields: [threadId], references: [id])
  threadId      Int
}

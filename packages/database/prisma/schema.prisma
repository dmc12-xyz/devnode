// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model DiscordChallenge {
  id            Int      @id @default(autoincrement())
  did           String   @unique
  username      String
  timestamp     DateTime
  challengeCode String   @unique
  userId        String   @unique
}

model User {
  id         String @id @unique @default(cuid())
  discord    String @unique
  did        String @unique
  didSession String @unique
}

model Thread {
  id          Int       @id @default(autoincrement())
  discordId   String    @unique
  streamId    String    @unique
  discordUser String
  timestamp   String
  title       String
  messages    Comment[]
}

model Comment {
  id          Int    @id @default(autoincrement())
  discordId   String @unique
  streamId    String @unique
  discordUser String
  timestamp   String
  content     String
  Thread      Thread @relation(fields: [threadId], references: [id])
  threadId    Int
}
